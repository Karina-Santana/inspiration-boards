<% if logged_in? %>
    <h2>Welcome <%= current_user['name'] %></h2>

    <form action="/board" method="POST">
        <label for="">Create new board: </label>
        <input type="text" name="board_title">

        <button>Create board</button>
    </form>
    
    

    <% board_photos.each do |photos| %>
        <h2><%= photos['board_title'] %></h2>

        <a href="/board/<%= photos['id'] %>/edit">Edit board</a>

        <img src="<%= photos['image_url'] %>" alt="">
    <% end %>

    <form action="/sessions" method="POST">
        <button>Logout</button>
        <input type="hidden" name="_method" value="delete">
    </form>

<% else %>
    <h2>Welcome to Inspiration Boards!</h2>

    <a href="/sign_up">Sign up</a>
    <a href="/login">Login</a>

    <section>
        <% board_items.each do |board| %>
            <article>
                <img src="<%= board['image_url'] %>" alt="">

                <form action="/board/<%= board['id'] %>" method="POST">
                    <input type="hidden" name="_method" value="delete">

                </form>
            </article>
        <% end %>
    </section>

<% end %>

